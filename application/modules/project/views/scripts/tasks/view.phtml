<table>
    <thead>
        <tr>
            <th>Note</th>
            <th>Added By</th>
            <th>Added On</th>
        </tr>
    </thead>
    <tbody>
        <?php if(count($this->task->Notes)): ?>
            <?php foreach($this->task->Notes as $note): ?>
                <tr>
                    <td><?php echo $note->note; ?></td>
