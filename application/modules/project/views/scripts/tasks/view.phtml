<h1><?php echo $this->task->title; ?></h1>

<div>
    <?php echo $this->task->description; ?>
</div>

<hr />

<div style="text-align: right">
    <p>
        Created by <?php echo $this->task->Author->name; ?> on <?php echo $this->task->dateAdded; ?>
    </p>

    <p>
        This task is due on <?php echo $this->task->deadline; ?>
